# AI Crypto App Environment Variables
# Copy this file to .env and fill in your actual values

# CryptoCompare API Key (get from https://cryptocompare.com/cryptopian/api-keys)
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# Console language (en or ru)
CONSOLE_LANGUAGE=en

# Production settings
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false

# Optional: Database connection (if you add database support)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_crypto

# Optional: Redis cache (if you add caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Monitoring (if you add monitoring services)
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090 